{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],
    "removeComments": false,                 
    "noUnusedLocals": true,                
    "noUnusedParameters": false,           
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false, 
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typings/@app-core",
      "./typings/@app-libs"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./typings.d.ts"
  ],
  "exclude": [
    "./src/test/**/*.ts"
  ]
}
