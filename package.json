{
  "name": "youtube_rest_api",
  "version": "0.0.1",
  "description": "youtube rest api for raspberrypi",
  "main": "index.js",
  "types": "main.d.ts",
  "scripts": {
    "postinstall": "node ./bin/link-packages.js",
    "build:dev": "npm run clear && npm run copy && npm run ts:build-dev ",
    "clear": "rimraf dist/*",
    "copy": "npm run copy:config",
    "copy:config": "copy ./src/**/etc/config.json dist",
    "start": "npm run build:dev && npm run server:start & npm run ts:watch",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "server:start": "node ./bin/run",
    "server:restart": "node ./bin/stop && node ./bin/run",
    "ts:build-dev": "npm run ts:lint && npm run ts:compile",
    "ts:compile": "echo '' > logs/ts-error.log && tsc 1>>logs/ts-error.log || echo 'error: ts-compile, see logs/ts-error.log for more informations'",
    "ts:lint": "tslint './src/**/*.ts' 2>&1 1>>logs/ts-lint-error.log || echo 'error: tslint, see logs/ts-lint-error.log for more infomations'",
    "ts:watch": "nodemon --watch ./src --ext ts --exec \"npm run ts:build-dev\"",
    "test-debug": "mocha --inspect-brk -r ts-node/register ./src/**/*.spec.ts --watch --watch-extensions ts"
  },
  "author": "Ralf Hannuschka",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "dbus-native": "^0.2.5",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "mariasql": "^0.2.6",
    "method-override": "^2.3.9",
    "morgan": "^1.8.2",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "rh-download": "git+https://git@github.com/r-hannuschka/rh-download",
    "rh-utils": "git+https://git@github.com/r-hannuschka/rh-utils.git",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.5",
    "@types/chai": "4.0.4",
    "@types/cookie-parser": "1.4.1",
    "@types/errorhandler": "0.0.31",
    "@types/method-override": "0.0.30",
    "@types/mocha": "2.2.42",
    "@types/morgan": "1.7.32",
    "@types/sinon": "^2.3.7",
    "chai": "4.1.1",
    "copy": "0.3.1",
    "karma": "6.3.16",
    "karma-chai": "0.1.0",
    "karma-mocha-reporter": "2.2.4",
    "mocha": "3.5.0",
    "mock-spawn": "^0.2.6",
    "nock": "^9.1.10",
    "nodemon": "1.11.0",
    "rimraf": "2.6.1",
    "sinon": "^3.3.0",
    "ts-node": "3.3.0",
    "tslint": "5.7.0",
    "typescript": "2.4.2"
  }
}
